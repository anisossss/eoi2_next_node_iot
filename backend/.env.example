# CSIR IoT Backend - Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001

# MongoDB Database
MONGODB_URI=mongodb://localhost:27017/csir_iot_db
# For Docker: mongodb://csir_admin:csir_secure_password_2026@mongodb:27017/csir_iot_db?authSource=admin

# MQTT Broker
MQTT_BROKER_URL=mqtt://localhost:1883
# For Docker: mqtt://mqtt-broker:1883

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
